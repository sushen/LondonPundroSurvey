<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <stroke
                android:color="@android:color/system_notification_accent_color"
                android:width="1dp"/>

            <solid android:color="#c7c7c7"/>
            <corners android:radius="@dimen/radius" />
        </shape>

    </item>

    <item >
        <shape
            android:shape="rectangle">
            <corners
                android:radius="14dp"
                />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="#c7c7c7"
                android:startColor="#e6e3e3"
                android:endColor="#919191"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="270dp"
                android:height="60dp"
                />
            <stroke
                android:width="1dp"
                android:color="#878787"
                />
        </shape>

    </item>

</selector>